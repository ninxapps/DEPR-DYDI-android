<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_gravity="center"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:foregroundGravity="center"
    card_view:cardBackgroundColor="@color/white"
    card_view:cardCornerRadius="6dp">

    <RelativeLayout
        android:id="@+id/back"
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:background="#FFFFFF"
        android:visibility="invisible">

        <FrameLayout
            android:id="@+id/results"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:paddingRight="10dp">

            <ImageView
                android:src="@drawable/circle_bg"
                android:layout_width="90dp"
                android:layout_height="100dp"
                android:id="@+id/circle_bg"
                android:layout_alignParentRight="true"
                />

            <ImageView
                android:id="@+id/circle"
                android:layout_width="90dp"
                android:layout_height="100dp"
                android:layout_alignParentRight="true"
                android:src="@drawable/circle"
                android:tint="#ff0000"
                />

            <ImageView
                android:layout_width="90dp"
                android:layout_height="100dp"
                android:src="@drawable/gauge"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="15dp"
                android:id="@+id/percent"
                android:textColor="#111111"
                android:textSize="14dp"
                android:layout_alignParentRight="true"
                android:gravity="center"
                android:text="0%"
                android:layout_gravity="center" />

        </FrameLayout>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/back_content"
            android:padding="15dp"
            android:paddingBottom="5dp"
            android:minHeight="120dp"
            android:layout_marginRight="55dp">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/back_date"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:textColor="#757575"
                android:text="10/03/2016, 15:40"/>

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:minHeight="50dp"
                android:id="@+id/back_text"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:textColor="#111111"
                android:textSize="18sp"
                android:text="a a a a a a a a a a a a a a a"
                android:layout_below="@+id/back_date"/>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_below="@+id/back_text">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/back_category"
                    android:layout_alignParentRight="true"
                    android:textColor="#757575"
                    android:text="Family"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/back_comment"
                    android:layout_alignParentRight="true"
                    android:textColor="#757575"
                    android:text="Family"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/back_vote"
                    android:layout_alignParentRight="true"
                    android:textColor="#757575"
                    android:text="Family"/>

            </LinearLayout>

        </RelativeLayout>


        <ImageView
            android:id="@+id/answer"
            android:layout_width="fill_parent"
            android:layout_height="3dp"
            android:background="#FF0000"
            android:paddingRight="150dp"
            android:layout_alignParentBottom="true"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/front">

        <FrameLayout
            android:id="@+id/options"
            android:layout_width="70dp"
            android:layout_height="100dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:paddingLeft="15dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:paddingRight="10dp">

            <ImageButton
                android:id="@+id/thumb_up"
                android:layout_width="45dp"
                android:layout_height="40dp"
                android:background="@drawable/thumb_up"/>

            <ImageButton
                android:id="@+id/thumb_down"
                android:layout_width="45dp"
                android:layout_height="40dp"
                android:background="@drawable/thumb_down"
                android:layout_gravity="bottom"/>

        </FrameLayout>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/content"
            android:padding="15dp"
            android:paddingBottom="5dp"
            android:minHeight="120dp"
            android:layout_marginRight="55dp">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/date"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:textColor="#757575"
                android:text="10/03/2016, 15:40"/>

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:minHeight="50dp"
                android:id="@+id/text"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:textColor="#111111"
                android:textSize="18sp"
                android:text="a a a a a a a a a a a a a a a"
                android:layout_below="@+id/date"/>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_below="@+id/text">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/nsfw"
                    android:layout_alignParentRight="true"
                    android:textColor="#EEEEEE"
                    android:background="@drawable/nsfw"
                    android:layout_marginRight="5dp"
                    android:text="NSFW"
                    android:gravity="center_horizontal" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/category"
                    android:layout_alignParentRight="true"
                    android:textColor="#757575"
                    android:text="Family"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/comment"
                    android:layout_alignParentRight="true"
                    android:textColor="#757575"
                    android:text="Family"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/vote"
                    android:layout_alignParentRight="true"
                    android:textColor="#757575"
                    android:text="Family"/>

            </LinearLayout>

        </RelativeLayout>

    </RelativeLayout>

</android.support.v7.widget.CardView>